<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/description_TLB_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_200"
        app:title="Login Trippal"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        android:textColor="@color/purple_200"
        android:text="Welcome! Please Enter your number with country code to login..."
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/main_EDT_phone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"
        app:placeholderText="+972 55 1234567"
        app:boxStrokeColor="@color/purple_200"
        app:hintTextColor="@color/purple_200"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_BTN_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/logout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_200"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/main_BTN_continue_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Continue"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

</LinearLayout>